<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/hotel_qr_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.QRCodeActivity">

    <com.showboom.showboomlauncher.widget.LetterSpacingTextView
        android:id="@+id/hotel_qr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="134dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="13dp"
        android:text="@string/hotel_scan_qr_hint"
        android:textColor="#444444"
        android:textSize="19dp"/>

    <ImageView
        android:id="@+id/hotel_qr_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"/>
</LinearLayout>