<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_service_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/home_service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="22dp"
        android:text="私人管家24小时为您服务"
        android:textColor="@color/home_service_text"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/home_service_one"
            android:layout_width="164dp"
            android:layout_height="55dp"
            android:background="@drawable/linearlayout_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/service_one_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ser_tel_bg"/>
            <TextView
                android:id="@+id/service_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="客房电话"
                android:textColor="@color/home_service_text"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_service_two"
            android:layout_width="164dp"
            android:layout_height="55dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/linearlayout_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/service_two_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ser_sweep_bg"/>
            <TextView
                android:id="@+id/service_two_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="房间打扫"
                android:textColor="@color/home_service_text"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/home_service_three"
            android:layout_width="164dp"
            android:layout_height="55dp"
            android:background="@drawable/linearlayout_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/service_three_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ser_zu_bg"/>
            <TextView
                android:id="@+id/service_three_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="物品租借"
                android:textColor="@color/home_service_text"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_service_four"
            android:layout_width="164dp"
            android:layout_height="55dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/linearlayout_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/service_four_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ser_wifi_bg"/>
            <TextView
                android:id="@+id/service_four_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="高速WIFI"
                android:textColor="@color/home_service_text"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>